<%= render 'shared/navbar' %>
<div id="home-container">
  <div id="content-wrap">
    <div class="banner" style="background-image: url(https://cf.bstatic.com/images/hotel/max1280x900/239/239100831.jpg), linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.8));">
      <div class="container">
        <h1>Experience a complete new way to stay wherever you like on the planet!</h1>
        <p>We help you to find the most customized accomodations.</p>
        <div class="form-inline d-flex" style="width:100%">
          <%= form_tag flats_path, method: :get do %>
          <%= text_field_tag :query, params[:query], class: 'search-input pr-0 mr-0', style: "width:50%"%><%= submit_tag 'search', class: 'search-btn'%>
          <% end %>
        </div>
        </div>
      </div>
    </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-align-self-center">
        <h1 class="title">Check our flats (<%= @flats.count %>)</h1>
      </div>
    </div>
    <div class="cards">
      <% @flats.each do |flat|%>

        <div class="card-category">
          <div class="thumb" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('<%= flat.photo %>')">
            <div class="main">
              <div class="col align-self-center">
                <h2><%= flat.name %></h2>
              </div>
            </div>
          </div>
          <div class="card-footer">
            <p><%= flat.address %></p>
            <p>$<%= flat.price %></p>
          </div>
          <div class="card-footer">
            <%= link_to "More info", flat_path(flat) %>
          </div>
        </div>
        <% end %>
    </div>
  <%= render 'shared/footer'%>
</div>


