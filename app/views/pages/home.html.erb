<%= render 'shared/navbar' %>
<div id="home-container">
  <div id="content-wrap">
    <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
      <div class="container">
        <h1>Experience a complete new way to stay wherever you like on the planet!</h1>
        <p>We help you to find the most customized accomodations.</p>
        <%= form_tag(root_path, :method => :get) do |f| %>
        <%= text_field_tag :query %>
        <%= submit_tag 'search' %>
        <% end %>
        <div class="row">
          <div class="col align-self-end">
            <%= link_to "Book now", "#", class: "btn btn-ghost" %>
          </div>
        </div>
      </div>
    </div>
    </div>
<h1>Check out our flats (<%= @flats.count %>)</h1>
    <div class="cards">
      <% @flats.each do |flat|%>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= flat.photo %>')">
          <div row>
            <div class="col align-self-center">
              <h2><%= flat.name %></h2>
              </div>
              <p><%= flat.address %></p>
              <p>$<%= flat.price %></p>
              <%= link_to "More info", flat_path(flat) %>
            </div>
          </div>
        <% end %>
    </div>
  <%= render 'shared/footer'%>
</div>


